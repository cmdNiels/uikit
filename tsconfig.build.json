{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"outDir": "out",
		"rootDir": ".",
		"declaration": true,
		"declarationMap": false,
		"emitDeclarationOnly": false,
		"module": "esnext",
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["index.ts", "cn.ts", "components/**/*.ts", "components/**/*.tsx"],
	"exclude": ["node_modules", "dist", "out", ".ladle", "**/*.stories.tsx"]
}
